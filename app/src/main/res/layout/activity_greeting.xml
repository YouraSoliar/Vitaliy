<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GreetingActivity">

    <ImageView
        android:id="@+id/imageViewGay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:src="@drawable/gay"/>

    <TextView
        android:id="@+id/textViewSecret"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:text="GAY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewGreeting"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Вітаємо тебе всі разOм. Бажаю щоб ніхто тебе не одурманив гіпнозОм, а мчав до своєї мети немов паровозОм. Щоб всі слідували за твоїм наказОм, а як не то най катаються гімновозОм!!!!"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewPeoples"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Тебе вітали:"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewGreeting" />

    <ImageView
        android:id="@+id/imageViewYurii"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        android:src="@drawable/yurii"
        app:layout_constraintEnd_toStartOf="@+id/imageViewTanya"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewPeoples" />

    <ImageView
        android:id="@+id/imageViewTanya"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/tanya"
        app:layout_constraintEnd_toStartOf="@+id/imageViewOlia"
        app:layout_constraintStart_toEndOf="@+id/imageViewYurii"
        app:layout_constraintTop_toBottomOf="@+id/textViewPeoples" />

    <ImageView
        android:id="@+id/imageViewOlia"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewNazar"
        app:layout_constraintStart_toEndOf="@+id/imageViewTanya"
        app:layout_constraintTop_toBottomOf="@+id/textViewPeoples" />

    <ImageView
        android:id="@+id/imageViewNazar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewOlia"
        app:layout_constraintTop_toBottomOf="@+id/textViewPeoples" />


    <ImageView
        android:id="@+id/imageViewAndriy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="1dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewIvanka"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewYurii" />

    <ImageView
        android:id="@+id/imageViewIvanka"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewAlina"
        app:layout_constraintStart_toEndOf="@+id/imageViewAndriy"
        app:layout_constraintTop_toBottomOf="@+id/imageViewYurii" />

    <ImageView
        android:id="@+id/imageViewAlina"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toStartOf="@+id/imageViewNone"
        app:layout_constraintStart_toEndOf="@+id/imageViewIvanka"
        app:layout_constraintTop_toBottomOf="@+id/imageViewYurii" />

    <ImageView
        android:id="@+id/imageViewNone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewAlina"
        app:layout_constraintTop_toBottomOf="@+id/imageViewYurii" />

</androidx.constraintlayout.widget.ConstraintLayout>